<%= form_for([course, assignment]) do |f| %>
  <% if assignment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(assignment.errors.count, "error") %> prohibited this assignment from being saved:</h2>

      <ul>
      <% assignment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :statement %>
    <%= f.text_area :statement %>
  </div>

  <div class="field">
    <%= f.label :start_date %>
    <div class="container">
      <div class="row">
          <div class='col-sm-2'>
              <div class="form-group">
                  <div class='input-group date' id='datetimepicker1'>
                      <%= f.text_field :start_date, "data-provide" => 'datetimepicker' %>
                      <span class="input-group-addon">
                          <span class="glyphicon glyphicon-calendar"></span>
                      </span>
                  </div>
              </div>
          </div>
          <script type="text/javascript">
              $(function () {
                  $('#datetimepicker1').datetimepicker();
              });
          </script>
      </div>
  </div>
</div>

<div class="field">
  <%= f.label :end_date %>
  <div class="container">
    <div class="row">
        <div class='col-sm-2'>
            <div class="form-group">
                <div class='input-group date' id='datetimepicker2'>
                    <%= f.text_field :end_date, "data-provide" => 'datetimepicker' %>
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>
        <script type="text/javascript">
            $(function () {
                $('#datetimepicker2').datetimepicker();
            });
        </script>
    </div>
  </div>
</div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
